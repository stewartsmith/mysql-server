let $engine = 'Falcon';
eval SET @@storage_engine = $engine;

--disable_warnings
DROP TABLE IF EXISTS t1;
--error 0,ER_NO_SUCH_TABLESPACE
DROP TABLESPACE ts1 ENGINE=falcon;
--enable_warnings


